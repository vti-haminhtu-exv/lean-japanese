                translation: "H?m nay t?i ?i si?u th?. T?i mua b?nh m?. T?i mua s?a. T?i v? nh?. T?i ?n b?nh m?. T?i u?ng s?a.",
                highlightedWords: [
                    {word: '今日', hiragana: 'きょう', romaji: 'kyou', meaning: 'h?m nay'},
                    {word: 'スーパー', hiragana: 'スーパー', romaji: 'suupaa', meaning: 'si?u th?'},
                    {word: 'パン', hiragana: 'パン', romaji: 'pan', meaning: 'b?nh m?'},
                    {word: '買います', hiragana: 'かいます', romaji: 'kaimasu', meaning: 'mua'},
                    {word: '牛乳', hiragana: 'ぎゅうにゅう', romaji: 'gyuunyuu', meaning: 's?a'},
                    {word: '飲みます', hiragana: 'のみます', romaji: 'nomimasu', meaning: 'u?ng'}
                ]
            }
        }
    };

    function generateLessonButtons() {
        const grid = document.getElementById('lesson-grid');
        grid.innerHTML = '';
        const lessonKeys = Object.keys(allLessons);

        lessonKeys.forEach(lessonNum => {
            const lesson = allLessons[lessonNum];
            const icon = LESSON_ICONS[lessonNum] || '?';
            const btn = document.createElement('button');
            btn.className = 'lesson-btn';
            btn.innerHTML = `
                <div class="lesson-icon">${icon}</div>
                <div class="lesson-number">B?i ${lessonNum}</div>
                <div class="lesson-name">${lesson.title}</div>
                <div class="lesson-stats">${lesson.words.length} t?</div>
            `;
            if (lessonNum == currentLesson) btn.classList.add('active');
            try {
                const completedLessons = JSON.parse(localStorage.getItem('completedLessons') || '[]');
                if (completedLessons.includes(parseInt(lessonNum))) btn.classList.add('completed');
            } catch (e) {
                console.log('localStorage not available');
            }
            btn.onclick = () => selectLesson(parseInt(lessonNum));
            grid.appendChild(btn);
        });
    }

    function loadLessonsData() {
        console.log("?ang t?i d? li?u t?:", DATA_URL);
        const xhr = new XMLHttpRequest();
        xhr.open('GET', DATA_URL, true);
        xhr.timeout = 10000;

        xhr.onreadystatechange = () => {
            if (xhr.readyState === 4) {
                if (xhr.status === 200) {
                    try {
                        let fixedJSON = xhr.responseText
                            .replace(/'/g, '"')
                            .replace(/,(\s*[}\]])/g, '$1')
                            .replace(/[-\u001F\u007F-\u009F]/g, '')
                            .trim();
                        allLessons = JSON.parse(fixedJSON);
                        generateLessonButtons();
                        showInterface('lesson-selection');
                    } catch (error) {
                        console.error("Error parsing JSON:", error);
                        handleLoadError(error);
                    }
                } else {
                    console.error("HTTP Error:", xhr.status);
                    handleLoadError(new Error('HTTP error: ' + xhr.status));
                }
            }
        };

        xhr.onerror = () => handleLoadError(new Error('Network error'));
        xhr.ontimeout = () => handleLoadError(new Error('Request timeout'));
        xhr.send();
    }

    function handleLoadError(error) {
        console.error("Error loading lessons:", error);
        allLessons = FALLBACK_DATA;
        generateLessonButtons();
        showInterface('lesson-selection');
        showError('Kh?ng th? t?i d? li?u t? server.\n\nL?i: ' + error.message + '\n\n?ang s? d?ng d? li?u m?u.', true);
    }

    function showError(message, isWarning) {
        const errorMsg = document.getElementById('error-message');
        const errorTitle = document.querySelector('.error-title');
        const errorIcon = document.querySelector('.error-icon');
        errorTitle.textContent = isWarning ? 'C?nh b?o' : 'Kh?ng th? t?i d? li?u';
        errorIcon.textContent = isWarning ? '??' : '?';
        errorMsg.textContent = message;
        showInterface('error-interface');
    }

    function showInterface(interfaceId) {
        document.querySelectorAll('.interface').forEach(intf => intf.classList.remove('active'));
        document.getElementById(interfaceId).classList.add('active');
    }

    function selectLesson(lessonNum) {
        currentLesson = lessonNum;
        words = allLessons[lessonNum].words;
        currentIndex = 0;
        isFlipped = false;
        masteredSet.clear();

        // RESET READING STATE - Fix cho vi?c button ?nh h??ng sai b?i kh?c
        resetReadingState();

        document.getElementById('current-lesson-info').textContent = `? B?i ${lessonNum}: ${allLessons[lessonNum].title}`;

        showInterface('learning-interface');
        showCard();
        loadReadingPassage();
    }

    // H?m m?i ?? reset tr?ng th?i reading
    function resetReadingState() {
        isReadingVisible = false;
        document.getElementById('reading-section').style.display = 'none';

        // Reset button v? tr?ng th?i ban ??u
        const showReadingBtn = document.getElementById('show-reading-btn');
        showReadingBtn.textContent = '? Luy?n ??c';
        showReadingBtn.style.background = '';

        // Stop any current speech
        stopCurrentSpeech();
    }

    function showReadingPassage() {
        isReadingVisible = true;
        document.getElementById('reading-section').style.display = 'block';
        document.getElementById('show-reading-btn').textContent = '? ?n ??c';
        document.getElementById('show-reading-btn').style.background = 'linear-gradient(135deg, #dc3545 0%, #c82333 100%)';
    }

    function hideReadingPassage() {
        isReadingVisible = false;
        document.getElementById('reading-section').style.display = 'none';
        document.getElementById('show-reading-btn').textContent = '? Luy?n ??c';
        document.getElementById('show-reading-btn').style.background = '';

        // Stop any current speech
        stopCurrentSpeech();
    }

    function toggleReadingPassage() {
        if (isReadingVisible) {
            hideReadingPassage();
        } else {
            showReadingPassage();
        }
    }

    function loadReadingPassage() {
        const lesson = allLessons[currentLesson];
        if (!lesson.readingPassage) return;

        const readingTextEl = document.getElementById('reading-text');
        const readingTranslationEl = document.getElementById('reading-translation');
        const readingTitleEl = document.getElementById('reading-passage-title');
        const passage = lesson.readingPassage;

        // Set title
        readingTitleEl.textContent = passage.title;

        let highlightedText = passage.text;

        // Create a lookup map from lesson words for better data matching
        const wordsLookup = {};
        lesson.words.forEach(wordItem => {
            wordsLookup[wordItem.kanji] = {
                hiragana: wordItem.hiragana,
                romaji: wordItem.romaji,
                meaning: wordItem.meaning
            };
        });

        // Highlight vocabulary words with enhanced data attributes
        if (passage.highlightedWords) {
            passage.highlightedWords.forEach(item => {
                const regex = new RegExp(item.word, 'g');
                
                // Try to get hiragana/romaji from lesson words first, then fallback to passage data
                let hiraganaReading = item.hiragana || '';
                let romajiReading = item.romaji || '';
                let meaningText = item.meaning || '';

                // Check if this word exists in the lesson vocabulary
                if (wordsLookup[item.word]) {
                    hiraganaReading = wordsLookup[item.word].hiragana;
                    romajiReading = wordsLookup[item.word].romaji;
                    meaningText = wordsLookup[item.word].meaning;
                }

                highlightedText = highlightedText.replace(regex,
                    `<span class="highlighted-word" 
                        data-word="${item.word}" 
                        data-hiragana="${hiraganaReading}" 
                        data-romaji="${romajiReading}" 
                        data-meaning="${meaningText}">
                        ${item.word}
                        <span class="word-reading">${hiraganaReading}</span>
                        <span class="click-hint">? click ?? nghe</span>
                    </span>`
                );
            });
        }

        readingTextEl.innerHTML = highlightedText;

        // Set translation
        readingTranslationEl.textContent = passage.translation;

        // Add event listeners for highlighted words
        const highlightedWords = readingTextEl.querySelectorAll('.highlighted-word');
        highlightedWords.forEach(word => {
            // Show meaning tooltip on long hover/touch
            let hoverTimeout;
            
            word.addEventListener('mouseenter', (e) => {
                hoverTimeout = setTimeout(() => {
                    showSimpleTooltip(e);
                }, 800); // Show meaning after 800ms hover
            });
            
            word.addEventListener('mouseleave', () => {
                clearTimeout(hoverTimeout);
                hideTooltip();
            });
            
            word.addEventListener('touchstart', (e) => {
                hoverTimeout = setTimeout(() => {
                    showSimpleTooltip(e);
                }, 500); // Show meaning after 500ms touch
            });
            
            word.addEventListener('touchend', () => {
                clearTimeout(hoverTimeout);
                hideTooltip();
            });

            // Enhanced click functionality to read words
            word.addEventListener('click', function(e) {
                e.preventDefault();
                clearTimeout(hoverTimeout);
                hideTooltip();
                
                const wordText = e.target.getAttribute('data-word');
                const hiraganaText = e.target.getAttribute('data-hiragana');
                
                console.log('Clicked word:', wordText);
                console.log('Hiragana:', hiraganaText);
                
                if (hiraganaText) {
                    // Prioritize hiragana reading if available
                    const cleanText = hiraganaText.trim().replace(/[^\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FAF\u3400-\u4DBF]/g, '');
                    console.log('Speaking hiragana:', cleanText);
                    speak(cleanText, 'ja-JP');
                } else if (wordText) {
                    // Fallback to kanji/original word
                    const cleanText = wordText.trim().replace(/[^\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FAF\u3400-\u4DBF]/g, '');
                    console.log('Speaking original word:', cleanText);
                    speak(cleanText, 'ja-JP');
                } else {
                    // Final fallback to textContent
                    const textContent = e.target.textContent.trim();
                    const cleanText = textContent.replace(/[^\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FAF\u3400-\u4DBF]/g, '');
                    console.log('Using textContent:', cleanText);
                    speak(cleanText, 'ja-JP');
                }
            });
        });
    }

    function showSimpleTooltip(e) {
        const tooltip = document.getElementById('tooltip');
        const meaning = e.target.getAttribute('data-meaning');

        tooltip.textContent = meaning || '';
        tooltip.classList.add('show');

        // Position tooltip
        const rect = e.target.getBoundingClientRect();
        const tooltipRect = tooltip.getBoundingClientRect();

        let left = rect.left + (rect.width / 2) - (tooltipRect.width / 2);
        let top = rect.top - tooltipRect.height - 10;

        // Adjust if tooltip goes off screen
        if (left < 0) left = 10;
        if (left + tooltipRect.width > window.innerWidth) {
            left = window.innerWidth - tooltipRect.width - 10;
        }
        if (top < 0) {
            top = rect.bottom + 10;
        }

        tooltip.style.left = left + window.scrollX + 'px';
        tooltip.style.top = top + window.scrollY + 'px';
    }

    function hideTooltip() {
        const tooltip = document.getElementById('tooltip');
        tooltip.classList.remove('show');
    }

    function stopCurrentSpeech() {
        if ('speechSynthesis' in window) {
            speechSynthesis.cancel();
        }
        currentSpeechUtterance = null;
    }

    function speak(text, lang = 'ja-JP') {
        if ('speechSynthesis' in window) {
            try {
                stopCurrentSpeech();
                setTimeout(() => {
                    currentSpeechUtterance = new SpeechSynthesisUtterance(text);
                    currentSpeechUtterance.lang = lang;
                    currentSpeechUtterance.rate = 0.7;
                    currentSpeechUtterance.pitch = 1;
                    currentSpeechUtterance.volume = 1;

                    currentSpeechUtterance.onend = () => {
                        currentSpeechUtterance = null;
                    };

                    speechSynthesis.speak(currentSpeechUtterance);
                }, 100);
            } catch (e) {
                console.log('Speech synthesis error:', e);
            }
        }
    }

    function speakJapanese() {
        speak(words[currentIndex].hiragana, 'ja-JP');
    }

    function speakExample() {
        speak(words[currentIndex].example, 'ja-JP');
    }

    function speakReadingPassage() {
        const lesson = allLessons[currentLesson];
        if (lesson && lesson.readingPassage && lesson.readingPassage.text) {
            // Debug: In ra console ?? ki?m tra
            console.log('Speaking text:', lesson.readingPassage.text);
            // Ch?c ch?n s? d?ng text g?c t? data, kh?ng ph?i t? DOM
            const originalText = lesson.readingPassage.text;
            speak(originalText, 'ja-JP');
        } else {
            // Fallback: n?u kh?ng c? data, l?y textContent t? DOM (lo?i b? HTML tags)
            const readingTextEl = document.getElementById('reading-text');
            if (readingTextEl) {
                const cleanText = readingTextEl.textContent || readingTextEl.innerText;
                console.log('Fallback speaking text:', cleanText);
                speak(cleanText, 'ja-JP');
            }
        }
    }

    function generateGrammarAnalysis() {
        const word = words[currentIndex];
        const breakdownContainer = document.getElementById('sentence-breakdown');
        const examplesContainer = document.getElementById('pattern-examples');
        breakdownContainer.innerHTML = '';

        if (word.breakdown) {
            word.breakdown.forEach(part => {
                const wordPart = document.createElement('span');
                wordPart.className = `word-part ${part.type}`;
                wordPart.innerHTML = `${part.word}<br><small>${part.reading}</small><br><small>${part.meaning}</small>`;
                breakdownContainer.appendChild(wordPart);
            });
            const patternDiv = document.createElement('div');
            patternDiv.style.cssText = 'margin-top: 12px; font-weight: bold; color: #1976d2;';
            patternDiv.innerHTML = `<strong>? C?u tr?c:</strong> ${word.pattern}`;
            breakdownContainer.appendChild(patternDiv);
        }

        examplesContainer.innerHTML = '<div style="font-weight: bold; color: #f57c00; margin-bottom: 8px;">? C?c v? d? t??ng t?:</div>';
        if (word.examples) {
            word.examples.forEach(example => {
                const exampleDiv = document.createElement('div');
                exampleDiv.className = 'pattern-example';
                const contentDiv = document.createElement('div');
                contentDiv.className = 'pattern-content';
                const jpDiv = document.createElement('div');
                jpDiv.className = 'pattern-jp japanese-text';
                jpDiv.textContent = example.jp;
                const vnDiv = document.createElement('div');
                vnDiv.className = 'pattern-vn';
                vnDiv.textContent = example.vn;
                const audioBtn = document.createElement('button');
                audioBtn.className = 'pattern-audio';
                audioBtn.innerHTML = '?';
                audioBtn.onclick = () => speakPatternExample(example.jp);
                contentDiv.appendChild(jpDiv);
                contentDiv.appendChild(vnDiv);
                exampleDiv.appendChild(contentDiv);
                exampleDiv.appendChild(audioBtn);
                examplesContainer.appendChild(exampleDiv);
            });
        }
    }

    function speakPatternExample(text) {
        speak(text, 'ja-JP');
    }

    function toggleGrammar() {
        grammarVisible = !grammarVisible;
        const grammarSection = document.getElementById('detailed-grammar');
        const grammarBtn = document.getElementById('grammarBtn');
        if (grammarVisible) {
            generateGrammarAnalysis();
            grammarSection.style.display = 'block';
            grammarBtn.textContent = '? ?n ph?n t?ch';
            grammarBtn.style.background = 'linear-gradient(135deg, #f57c00 0%, #ef6c00 100%)';
        } else {
            grammarSection.style.display = 'none';
            grammarBtn.textContent = '? Ph?n t?ch ng? ph?p';
            grammarBtn.style.background = 'linear-gradient(135deg, #9c27b0 0%, #7b1fa2 100%)';
        }
    }

    function showCard() {
        const word = words[currentIndex];
        document.getElementById('card-number').textContent = `#${currentIndex + 1}`;
        document.getElementById('kanji').textContent = word.kanji;
        document.getElementById('hiragana').textContent = word.hiragana;
        document.getElementById('romaji').textContent = word.romaji;
        document.getElementById('kanji2').textContent = word.kanji;
        document.getElementById('hiragana2').textContent = word.hiragana;
        document.getElementById('romaji2').textContent = word.romaji;
        document.getElementById('meaning').textContent = word.meaning;
        document.getElementById('example-jp').textContent = word.example;
        document.getElementById('example-vn').textContent = word.exampleVn;
        document.getElementById('current').textContent = currentIndex + 1;
        document.getElementById('total').textContent = words.length;
        document.getElementById('total2').textContent = words.length;
        document.getElementById('mastered').textContent = masteredSet.size;
        const btn = document.getElementById('masteredBtn');
        btn.textContent = masteredSet.has(currentIndex) ? '? ?? h?c' : '?? ??nh d?u';
        btn.className = masteredSet.has(currentIndex) ? 'btn mastered-btn' : 'btn';
        grammarVisible = false;
        document.getElementById('detailed-grammar').style.display = 'none';
        document.getElementById('grammarBtn').textContent = '? Ph?n t?ch ng? ph?p';
        document.getElementById('grammarBtn').style.background = 'linear-gradient(135deg, #9c27b0 0%, #7b1fa2 100%)';
        setTimeout(speakJapanese, 500);
    }

    function flip() {
        isFlipped = !isFlipped;
        const front = document.getElementById('front');
        const back = document.getElementById('back');
        const card = document.getElementById('card');
        if (isFlipped) {
            front.style.display = 'none';
            back.style.display = 'block';
            card.className = 'card flipped';
        } else {
            front.style.display = 'block';
            back.style.display = 'none';
            card.className = 'card';
        }
    }

    function next() {
        currentIndex = (currentIndex + 1) % words.length;
        isFlipped = false;
        document.getElementById('front').style.display = 'block';
        document.getElementById('back').style.display = 'none';
        document.getElementById('card').className = 'card';
        showCard();
    }

    function prev() {
        currentIndex = currentIndex === 0 ? words.length - 1 : currentIndex - 1;
        isFlipped = false;
        document.getElementById('front').style.display = 'block';
        document.getElementById('back').style.display = 'none';
        document.getElementById('card').className = 'card';
        showCard();
    }

    function toggleMastered() {
        if (masteredSet.has(currentIndex)) {
            masteredSet.delete(currentIndex);
        } else {
            masteredSet.add(currentIndex);
        }
        showCard();
        try {
            const lessonProgress = { lesson: currentLesson, masteredWords: Array.from(masteredSet) };
            localStorage.setItem(`lesson_${currentLesson}_progress`, JSON.stringify(lessonProgress));
        } catch (e) {
            console.log('localStorage not available');
        }
    }

    function backToMenu() {
        stopCurrentSpeech(); // Stop speech when going back to menu
        generateLessonButtons();
        showInterface('lesson-selection');
    }

    function retryLoad() {
        showInterface('loading-interface');
        loadLessonsData();
    }

    function startTest() {
        stopCurrentSpeech(); // Stop speech when starting test
        const shuffledWords = shuffleArray(words.slice());
        testWords = shuffledWords.slice(0, Math.min(10, shuffledWords.length));
        currentTestIndex = 0;
        testScore = 0;
        document.getElementById('test-lesson-info').textContent =
            `? B?i Test - B?i ${currentLesson}: ${allLessons[currentLesson].title}`;
        showInterface('test-interface');
        showTestQuestion();
    }

    function shuffleArray(array) {
        const newArray = array.slice();
        for (let i = newArray.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
        }
        return newArray;
    }

    function showTestQuestion() {
        if (currentTestIndex >= testWords.length) {
            showTestResult();
            return;
        }
        const word = testWords[currentTestIndex];
        isTestAnswered = false;
        selectedAnswer = '';
        document.getElementById('test-card-number').textContent = `#${currentTestIndex + 1}`;
        document.getElementById('test-kanji').textContent = word.kanji;
        document.getElementById('test-hiragana').textContent = word.hiragana;
        document.getElementById('test-romaji').textContent = word.romaji;
        document.getElementById('test-current').textContent = currentTestIndex + 1;
        document.getElementById('test-total').textContent = testWords.length;
        document.getElementById('test-score').textContent = testScore;
        generateTestOptions(word);
        document.getElementById('test-result').style.display = 'none';
        document.getElementById('test-next-btn').style.display = 'none';
    }

    function generateTestOptions(correctWord) {
        const optionsContainer = document.getElementById('test-options');
        optionsContainer.innerHTML = '';
        const otherWords = words.filter(w => w.meaning !== correctWord.meaning);
        const wrongAnswers = shuffleArray(otherWords).slice(0, 3).map(w => w.meaning);
        const allOptions = [correctWord.meaning, ...wrongAnswers];
        const shuffledOptions = shuffleArray(allOptions);
        shuffledOptions.forEach(option => {
            const btn = document.createElement('button');
            btn.className = 'option-btn';
            btn.textContent = option;
            btn.onclick = () => selectTestAnswer(option, correctWord.meaning);
            optionsContainer.appendChild(btn);
        });
    }

    function selectTestAnswer(selected, correct) {
        if (isTestAnswered) return;
        isTestAnswered = true;
        selectedAnswer = selected;
        const optionBtns = document.querySelectorAll('.option-btn');
        optionBtns.forEach(btn => {
            btn.classList.add('disabled');
            if (btn.textContent === correct) {
                btn.classList.add('correct');
            } else if (btn.textContent === selected && selected !== correct) {
                btn.classList.add('wrong');
            }
        });
        const resultDiv = document.getElementById('test-result');
        const resultIcon = document.getElementById('result-icon');
        const resultText = document.getElementById('result-text');
        const correctAnswer = document.getElementById('correct-answer');
        if (selected === correct) {
            testScore++;
            resultDiv.className = 'test-result';
            resultIcon.textContent = '?';
            resultText.textContent = 'Ch?nh x?c!';
            correctAnswer.style.display = 'none';
        } else {
            resultDiv.className = 'test-result wrong';
            resultIcon.textContent = '?';
            resultText.textContent = 'Sai r?i!';
            correctAnswer.textContent = `??p ?n ??ng: ${correct}`;
            correctAnswer.style.display = 'block';
        }
        resultDiv.style.display = 'block';
        document.getElementById('test-next-btn').style.display = 'block';
        document.getElementById('test-score').textContent = testScore;
    }

    function nextTestQuestion() {
        currentTestIndex++;
        showTestQuestion();
    }

    function showTestResult() {
        const percentage = Math.round((testScore / testWords.length) * 100);
        document.getElementById('final-score').textContent = `${testScore}/${testWords.length}`;
        document.getElementById('score-percentage').textContent = `${percentage}%`;
        document.getElementById('correct-count').textContent = testScore;
        document.getElementById('wrong-count').textContent = testWords.length - testScore;
        document.getElementById('accuracy').textContent = `${percentage}%`;
        const messageEl = document.getElementById('score-message');
        if (percentage >= 90) {
            messageEl.textContent = '? Xu?t s?c! B?n ?? th?nh th?o b?i h?c n?y!';
            messageEl.style.background = 'linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%)';
            messageEl.style.borderColor = '#28a745';
        } else if (percentage >= 70) {
            messageEl.textContent = '? T?t l?m! H?y ?n l?i m?t ch?t n?a.';
            messageEl.style.background = 'linear-gradient(135deg, #fff3e0 0%, #fafafa 100%)';
            messageEl.style.borderColor = '#ff9800';
        } else {
            messageEl.textContent = '? H?y h?c k? h?n v? th? l?i nh?!';
            messageEl.style.background = 'linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%)';
            messageEl.style.borderColor = '#dc3545';
        }
        showInterface('score-interface');
    }

    function speakTestWord() {
        speak(testWords[currentTestIndex].hiragana, 'ja-JP');
    }

    function retryTest() {
        startTest();
    }

    function backToStudy() {
        showInterface('learning-interface');
    }

    function addEventListeners() {
        const buttons = {
            'retry-btn': retryLoad,
            'prevBtn': prev,
            'nextBtn': next,
            'masteredBtn': toggleMastered,
            'flipBtn': flip,
            'flipBtn2': flip,
            'audioBtn': speakJapanese,
            'audioBtn2': speakExample,
            'grammarBtn': toggleGrammar,
            'backToMenuBtn': backToMenu,
            'startTestBtn': startTest,
            'test-audio-btn': speakTestWord,
            'test-next-btn': nextTestQuestion,
            'test-back-btn': backToMenu,
            'retry-test-btn': retryTest,
            'back-to-study-btn': backToStudy,
            'score-back-btn': backToMenu,
            'reading-audio-btn': speakReadingPassage,
            'show-reading-btn': toggleReadingPassage,
            'close-reading-btn': hideReadingPassage
        };

        Object.entries(buttons).forEach(([id, handler]) => {
            const btn = document.getElementById(id);
            if (btn) {
                btn.onclick = handler;
                btn.addEventListener('touchend', e => {
                    e.preventDefault();
                    handler();
                });
            }
        });

        // Handle lesson button clicks
        document.getElementById('lesson-grid').addEventListener('click', e => {
            const btn = e.target.closest('.lesson-btn');
            if (btn) {
                const lessonNum = parseInt(btn.querySelector('.lesson-number').textContent.match(/\d+/)[0]);
                selectLesson(lessonNum);
            }
        });

        document.getElementById('lesson-grid').addEventListener('touchend', e => {
            e.preventDefault();
            const btn = e.target.closest('.lesson-btn');
            if (btn) {
                const lessonNum = parseInt(btn.querySelector('.lesson-number').textContent.match(/\d+/)[0]);
                selectLesson(lessonNum);
            }
        });

        // Hide tooltip when clicking elsewhere
        document.addEventListener('click', (e) => {
            if (!e.target.classList.contains('highlighted-word')) {
                hideTooltip();
            }
        });

        // Stop speech when page is hidden or unloaded
        document.addEventListener('visibilitychange', () => {
            if (document.hidden) {
                stopCurrentSpeech();
            }
        });

        window.addEventListener('beforeunload', () => {
            stopCurrentSpeech();
        });
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
            loadLessonsData();
            addEventListeners();
        });
    } else {
        loadLessonsData();
        addEventListeners();
    }
</script>
</body>
</html>