    // Initialize app
    function initApp() {
        document.getElementById('loading-text').textContent = '?ang ki?m tra ??ng nh?p...';
        
        setTimeout(() => {
            checkAuthState();
        }, 1000);
    }

    // Check authentication state
    function checkAuthState() {
        if (DEMO_MODE) {
            const demoUser = localStorage.getItem('demoUser');
            if (demoUser) {
                currentUser = JSON.parse(demoUser);
                loadLessonsData();
            } else {
                showAuthInterface();
            }
        } else {
            // Real Firebase auth check would go here
            showAuthInterface();
        }
    }

    // Load lessons data
    function loadLessonsData() {
        document.getElementById('loading-text').textContent = '?ang t?i d? li?u b?i h?c...';
        
        console.log("?ang t?i d? li?u t?:", DATA_URL);
        const xhr = new XMLHttpRequest();
        xhr.open('GET', DATA_URL, true);
        xhr.timeout = 10000;

        xhr.onreadystatechange = () => {
            if (xhr.readyState === 4) {
                if (xhr.status === 200) {
                    try {
                        let fixedJSON = xhr.responseText
                            .replace(/'/g, '"')
                            .replace(/,(\s*[}\]])/g, '$1')
                            .replace(/[-\u001F\u007F-\u009F]/g, '')
                            .trim();
                        allLessons = JSON.parse(fixedJSON);
                        showLessonSelection();
                    } catch (error) {
                        console.error("Error parsing JSON:", error);
                        handleLoadError(error);
                    }
                } else {
                    console.error("HTTP Error:", xhr.status);
                    handleLoadError(new Error('HTTP error: ' + xhr.status));
                }
            }
        };

        xhr.onerror = () => handleLoadError(new Error('Network error'));
        xhr.ontimeout = () => handleLoadError(new Error('Request timeout'));
        xhr.send();
    }

    function handleLoadError(error) {
        console.error("Error loading lessons:", error);
        allLessons = FALLBACK_DATA;
        showLessonSelection();
        showError('Kh?ng th? t?i d? li?u t? server.\n\nL?i: ' + error.message + '\n\n?ang s? d?ng d? li?u m?u.', true);
    }

    // Show interfaces
    function showInterface(interfaceId) {
        document.querySelectorAll('.interface').forEach(intf => intf.classList.remove('active'));
        document.getElementById(interfaceId).classList.add('active');
    }

    function showAuthInterface() {
        showInterface('auth-interface');
    }

    function showLessonSelection() {
        loadUserProfile();
        generateLessonButtons();
        showInterface('lesson-selection');
    }

    function showLearningInterface() {
        showInterface('learning-interface');
    }

    // Authentication functions
    async function signInWithGoogle() {
        try {
            showLoading('google-login-btn');
            
            // Demo Google login with animation
            document.getElementById('loading-text').textContent = '?ang k?t n?i v?i Google...';
            await new Promise(resolve => setTimeout(resolve, 1500));
            
            const demoUser = {
                uid: 'demo-google-' + Date.now(),
                email: 'demo@gmail.com',
                displayName: 'Demo User (Google)',
                photoURL: null,
                provider: 'google'
            };
            
            localStorage.setItem('demoUser', JSON.stringify(demoUser));
            currentUser = demoUser;
            showSuccess('??ng nh?p Google th?nh c?ng!');
            
            setTimeout(() => {
                loadLessonsData();
            }, 1000);
            
        } catch (error) {
            showError('L?i ??ng nh?p Google: ' + error.message);
        } finally {
            hideLoading('google-login-btn');
        }
    }

    async function signInWithFacebook() {
        try {
            showLoading('facebook-login-btn');
            
            await new Promise(resolve => setTimeout(resolve, 1500));
            const demoUser = {
                uid: 'demo-facebook-' + Date.now(),
                email: 'demo@facebook.com',
                displayName: 'Demo User (Facebook)',
                photoURL: null,
                provider: 'facebook'
            };
            localStorage.setItem('demoUser', JSON.stringify(demoUser));
            currentUser = demoUser;
            showSuccess('??ng nh?p Facebook th?nh c?ng!');
            setTimeout(() => {
                loadLessonsData();
            }, 1000);
        } catch (error) {
            showError('L?i ??ng nh?p Facebook: ' + error.message);
        } finally {
            hideLoading('facebook-login-btn');
        }
    }

    async function signInWithEmail(email, password) {
        try {
            await new Promise(resolve => setTimeout(resolve, 1000));
            const demoUser = {
                uid: 'demo-email-' + Date.now(),
                email: email,
                displayName: email.split('@')[0],
                photoURL: null,
                provider: 'email'
            };
            localStorage.setItem('demoUser', JSON.stringify(demoUser));
            currentUser = demoUser;
            showSuccess('??ng nh?p th?nh c?ng!');
            setTimeout(() => {
                loadLessonsData();
            }, 1000);
        } catch (error) {
            showError('L?i ??ng nh?p: ' + error.message);
        }
    }

    async function registerWithEmail(name, email, password) {
        try {
            await new Promise(resolve => setTimeout(resolve, 1000));
            const demoUser = {
                uid: 'demo-register-' + Date.now(),
                email: email,
                displayName: name,
                photoURL: null,
                provider: 'email'
            };
            localStorage.setItem('demoUser', JSON.stringify(demoUser));
            currentUser = demoUser;
            showSuccess('??ng k? th?nh c?ng!');
            setTimeout(() => {
                loadLessonsData();
            }, 1000);
        } catch (error) {
            showError('L?i ??ng k?: ' + error.message);
        }
    }

    async function signOutUser() {
        try {
            localStorage.removeItem('demoUser');
            localStorage.removeItem('userProgress');
            currentUser = null;
            userProgress = {};
            showAuthInterface();
            showSuccess('??ng xu?t th?nh c?ng!');
        } catch (error) {
            showError('L?i ??ng xu?t: ' + error.message);
        }
    }

    // User profile functions
    function loadUserProfile() {
        if (!currentUser) return;

        try {
            // Load user progress
            const progress = JSON.parse(localStorage.getItem('userProgress') || '{}');
            userProgress = progress;
            updateUserDisplay(currentUser, progress);
        } catch (error) {
            console.error('Error loading user profile:', error);
        }
    }

    function updateUserDisplay(profile, progress) {
        // Update main profile
        updateProfileSection('user-name', 'user-email', 'user-avatar', 'user-stats', profile, progress);
        
        // Update mini profile
        updateProfileSection('user-name-mini', 'user-email-mini', 'user-avatar-mini', 'user-stats-mini', profile, progress);
    }

    function updateProfileSection(nameId, emailId, avatarId, statsId, profile, progress) {
        const nameEl = document.getElementById(nameId);
        const emailEl = document.getElementById(emailId);
        const avatarEl = document.getElementById(avatarId);
        const statsEl = document.getElementById(statsId);

        if (nameEl) nameEl.textContent = profile.displayName || 'Ng??i d?ng';
        if (emailEl) emailEl.textContent = profile.email || '';
        
        // Avatar
        if (avatarEl) {
            if (profile.photoURL) {
                avatarEl.innerHTML = `<img src="${profile.photoURL}" alt="Avatar" style="width:100%;height:100%;border-radius:50%;object-fit:cover;">`;
            } else {
                const initial = (profile.displayName || profile.email || 'U')[0].toUpperCase();
                avatarEl.textContent = initial;
            }
        }

        // Calculate stats
        if (statsEl) {
            const completedLessons = Object.keys(progress.lessons || {}).length;
            const totalProgress = Math.round((completedLessons / 30) * 100);
            statsEl.textContent = `? Ti?n ??: ${totalProgress}% | ? B?i ?? h?c: ${completedLessons}/30`;
        }
    }

    // Lesson functions
    function generateLessonButtons() {
        const grid = document.getElementById('lesson-grid');
        grid.innerHTML = '';
        const lessonKeys = Object.keys(allLessons);

        lessonKeys.forEach(lessonNum => {
            const lesson = allLessons[lessonNum];
            const icon = LESSON_ICONS[lessonNum] || '?';
            const btn = document.createElement('button');
            btn.className = 'lesson-btn';
            btn.innerHTML = `
                <div class="lesson-icon">${icon}</div>
                <div class="lesson-number">B?i ${lessonNum}</div>
                <div class="lesson-name">${lesson.title}</div>
                <div class="lesson-stats">${lesson.words.length} t?</div>
            `;
            if (lessonNum == currentLesson) btn.classList.add('active');
            
            // Check if lesson is completed
            if (userProgress.lessons && userProgress.lessons[lessonNum]) {
                const lessonProgress = userProgress.lessons[lessonNum];
                if (lessonProgress.completed) {
                    btn.classList.add('completed');
                }
            }
            
            btn.onclick = () => selectLesson(parseInt(lessonNum));
            grid.appendChild(btn);
        });
    }

    function selectLesson(lessonNum) {
        currentLesson = lessonNum;
        words = allLessons[lessonNum].words;
        currentIndex = 0;
        isFlipped = false;
        masteredSet.clear();

        // Reset reading state
        resetReadingState();

        document.getElementById('current-lesson-info').textContent = `? B?i ${lessonNum}: ${allLessons[lessonNum].title}`;

        showLearningInterface();
        showCard();
        loadReadingPassage();
    }

    // Reading functions
    function resetReadingState() {
        isReadingVisible = false;
        document.getElementById('reading-section').style.display = 'none';

        const showReadingBtn = document.getElementById('show-reading-btn');
        showReadingBtn.textContent = '? Luy?n ??c';
        showReadingBtn.style.background = '';

        stopCurrentSpeech();
    }

    function showReadingPassage() {
        isReadingVisible = true;
        document.getElementById('reading-section').style.display = 'block';
        document.getElementById('show-reading-btn').textContent = '? ?n ??c';
        document.getElementById('show-reading-btn').style.background = 'linear-gradient(135deg, #dc3545 0%, #c82333 100%)';
    }

    function hideReadingPassage() {
        isReadingVisible = false;
        document.getElementById('reading-section').style.display = 'none';
        document.getElementById('show-reading-btn').textContent = '? Luy?n ??c';
        document.getElementById('show-reading-btn').style.background = '';
        stopCurrentSpeech();
    }

    function toggleReadingPassage() {
        if (isReadingVisible) {
            hideReadingPassage();
        } else {
            showReadingPassage();
        }
    }

    function loadReadingPassage() {
        const lesson = allLessons[currentLesson];
        if (!lesson.readingPassage) return;

        const readingTextEl = document.getElementById('reading-text');
        const readingTranslationEl = document.getElementById('reading-translation');
        const readingTitleEl = document.getElementById('reading-passage-title');
        const passage = lesson.readingPassage;

        readingTitleEl.textContent = passage.title;

        let highlightedText = passage.text;

        if (passage.highlightedWords) {
            passage.highlightedWords.forEach(item => {
                const regex = new RegExp(item.word, 'g');
                highlightedText = highlightedText.replace(regex,
                    `<span class="highlighted-word" data-meaning="${item.meaning}" data-word="${item.word}">${item.word}</span>`
                );
            });
        }

        readingTextEl.innerHTML = highlightedText;
        readingTranslationEl.textContent = passage.translation;

        // Add event listeners for highlighted words
        const highlightedWords = readingTextEl.querySelectorAll('.highlighted-word');
        highlightedWords.forEach(word => {
            word.addEventListener('mouseenter', showTooltip);
            word.addEventListener('mouseleave', hideTooltip);
            word.addEventListener('touchstart', showTooltip);
            word.addEventListener('touchend', hideTooltip);

            word.addEventListener('click', function(e) {
                e.preventDefault();
                const wordText = e.target.getAttribute('data-word');
                if (wordText) {
                    const cleanText = wordText.trim().replace(/[^\u3040-\u309F\u30A0-\u30FF\u4E00-\u9FAF\u3400-\u4DBF]/g, '');
                    speak(cleanText, 'ja-JP');
                }
            });
        });
    }

    function showTooltip(e) {
        const tooltip = document.getElementById('tooltip');
        const meaning = e.target.getAttribute('data-meaning');

        tooltip.textContent = meaning;
        tooltip.classList.add('show');

        const rect = e.target.getBoundingClientRect();
        const tooltipRect = tooltip.getBoundingClientRect();

        let left = rect.left + (rect.width / 2) - (tooltipRect.width / 2);
        let top = rect.top - tooltipRect.height - 10;

        if (left < 0) left = 10;
        if (left + tooltipRect.width > window.innerWidth) {
            left = window.innerWidth - tooltipRect.width - 10;
        }
        if (top < 0) {
            top = rect.bottom + 10;
        }

        tooltip.style.left = left + window.scrollX + 'px';
        tooltip.style.top = top + window.scrollY + 'px';
    }

    function hideTooltip() {
        const tooltip = document.getElementById('tooltip');
        tooltip.classList.remove('show');
    }

    // Speech functions
    function stopCurrentSpeech() {
        if ('speechSynthesis' in window) {
            speechSynthesis.cancel();
        }
        currentSpeechUtterance = null;
    }

    function speak(text, lang = 'ja-JP') {
        if ('speechSynthesis' in window) {
            try {
                stopCurrentSpeech();
                setTimeout(() => {
                    currentSpeechUtterance = new SpeechSynthesisUtterance(text);
                    currentSpeechUtterance.lang = lang;
                    currentSpeechUtterance.rate = 0.7;
                    currentSpeechUtterance.pitch = 1;
                    currentSpeechUtterance.volume = 1;

                    currentSpeechUtterance.onend = () => {
                        currentSpeechUtterance = null;
                    };

                    speechSynthesis.speak(currentSpeechUtterance);
                }, 100);
            } catch (e) {
                console.log('Speech synthesis error:', e);
            }
        }
    }

    function speakJapanese() {
        speak(words[currentIndex].hiragana, 'ja-JP');
    }

    function speakExample() {
        speak(words[currentIndex].example, 'ja-JP');
    }

    function speakReadingPassage() {
        const lesson = allLessons[currentLesson];
        if (lesson && lesson.readingPassage && lesson.readingPassage.text) {
            const originalText = lesson.readingPassage.text;
            speak(originalText, 'ja-JP');
        }
    }

    // Flashcard functions
    function showCard() {
        const word = words[currentIndex];
        document.getElementById('card-number').textContent = `#${currentIndex + 1}`;
        document.getElementById('kanji').textContent = word.kanji;
        document.getElementById('hiragana').textContent = word.hiragana;
        document.getElementById('romaji').textContent = word.romaji;
        document.getElementById('kanji2').textContent = word.kanji;
        document.getElementById('hiragana2').textContent = word.hiragana;
        document.getElementById('romaji2').textContent = word.romaji;
        document.getElementById('meaning').textContent = word.meaning;
        document.getElementById('example-jp').textContent = word.example;
        document.getElementById('example-vn').textContent = word.exampleVn;
        document.getElementById('current').textContent = currentIndex + 1;
        document.getElementById('total').textContent = words.length;
        document.getElementById('total2').textContent = words.length;
        document.getElementById('mastered').textContent = masteredSet.size;
        
        const btn = document.getElementById('masteredBtn');
        btn.textContent = masteredSet.has(currentIndex) ? '? ?? h?c' : '?? ??nh d?u';
        btn.className = masteredSet.has(currentIndex) ? 'btn mastered-btn' : 'btn';
        
        setTimeout(speakJapanese, 500);
    }

    function flip() {
        isFlipped = !isFlipped;
        const front = document.getElementById('front');
        const back = document.getElementById('back');
        const card = document.getElementById('card');
        if (isFlipped) {
            front.style.display = 'none';
            back.style.display = 'block';
            card.className = 'card flipped';
        } else {
            front.style.display = 'block';
            back.style.display = 'none';
            card.className = 'card';
        }
    }

    function next() {
        currentIndex = (currentIndex + 1) % words.length;
        isFlipped = false;
        document.getElementById('front').style.display = 'block';
        document.getElementById('back').style.display = 'none';
        document.getElementById('card').className = 'card';
        showCard();
    }

    function prev() {
        currentIndex = currentIndex === 0 ? words.length - 1 : currentIndex - 1;
        isFlipped = false;
        document.getElementById('front').style.display = 'block';
        document.getElementById('back').style.display = 'none';
        document.getElementById('card').className = 'card';
        showCard();
    }

    function toggleMastered() {
        if (masteredSet.has(currentIndex)) {
            masteredSet.delete(currentIndex);
        } else {
            masteredSet.add(currentIndex);
        }
        showCard();
        saveUserProgress();
    }

    function saveUserProgress() {
        try {
            if (!userProgress.lessons) userProgress.lessons = {};
            userProgress.lessons[currentLesson] = {
                masteredWords: Array.from(masteredSet),
                lastAccessed: new Date().toISOString(),
                completed: masteredSet.size === words.length
            };
            localStorage.setItem('userProgress', JSON.stringify(userProgress));
            updateUserDisplay(currentUser, userProgress);
        } catch (e) {
            console.log('Error saving progress:', e);
        }
    }

    function backToMenu() {
        stopCurrentSpeech();
        generateLessonButtons();
        showLessonSelection();
    }

    function startTest() {
        showSuccess('Ch?c n?ng test s? ???c ph?t tri?n ti?p!');
    }

    // UI Helper functions
    function showLoading(buttonId) {
        const btn = document.getElementById(buttonId);
        if (btn) {
            btn.classList.add('loading');
            btn.disabled = true;
        }
    }

    function hideLoading(buttonId) {
        const btn = document.getElementById(buttonId);
        if (btn) {
            btn.classList.remove('loading');
            btn.disabled = false;
        }
    }

    function showMessage(message, type = 'error') {
        const messageEl = document.getElementById('auth-message');
        messageEl.innerHTML = `<div class="${type}-message">${message}</div>`;
        setTimeout(() => {
            messageEl.innerHTML = '';
        }, 5000);
    }

    function showError(message, isWarning = false) {
        if (isWarning) {
            const errorMsg = document.getElementById('error-message-content');
            const errorTitle = document.querySelector('.error-title');
            const errorIcon = document.querySelector('.error-icon');
            errorTitle.textContent = 'C?nh b?o';
            errorIcon.textContent = '??';
            errorMsg.textContent = message;
            showInterface('error-interface');
        } else {
            showMessage(message, 'error');
        }
    }

    function showSuccess(message) {
        showMessage(message, 'success');
    }

    // Form toggle functions
    function showLoginForm() {
        document.getElementById('login-form').style.display = 'block';
        document.getElementById('register-form').style.display = 'none';
        document.getElementById('auth-message').innerHTML = '';
    }

    function showRegisterForm() {
        document.getElementById('login-form').style.display = 'none';
        document.getElementById('register-form').style.display = 'block';
        document.getElementById('auth-message').innerHTML = '';
    }

    function retryLoad() {
        showInterface('loading-interface');
        loadLessonsData();
    }

    // Event listeners
    function setupEventListeners() {
        // Auth form toggles
        document.getElementById('show-register').onclick = showRegisterForm;
        document.getElementById('show-login').onclick = showLoginForm;

        // Social login buttons
        document.getElementById('google-login-btn').onclick = signInWithGoogle;
        document.getElementById('facebook-login-btn').onclick = signInWithFacebook;
        document.getElementById('google-register-btn').onclick = signInWithGoogle;
        document.getElementById('facebook-register-btn').onclick = signInWithFacebook;

        // Email forms
        document.getElementById('email-login-form').onsubmit = (e) => {
            e.preventDefault();
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            signInWithEmail(email, password);
        };

        document.getElementById('email-register-form').onsubmit = (e) => {
            e.preventDefault();
            const name = document.getElementById('register-name').value;
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            registerWithEmail(name, email, password);
        };

        // Logout buttons
        document.getElementById('logout-btn').onclick = signOutUser;
        document.getElementById('logout-btn-mini').onclick = signOutUser;

        // Flashcard controls
        const buttons = {
            'retry-btn': retryLoad,
            'prevBtn': prev,
            'nextBtn': next,
            'masteredBtn': toggleMastered,
            'flipBtn': flip,
            'flipBtn2': flip,
            'audioBtn': speakJapanese,
            'audioBtn2': speakExample,
            'backToMenuBtn': backToMenu,
            'startTestBtn': startTest,
            'reading-audio-btn': speakReadingPassage,
            'show-reading-btn': toggleReadingPassage,
            'close-reading-btn': hideReadingPassage
        };

        Object.entries(buttons).forEach(([id, handler]) => {
            const btn = document.getElementById(id);
            if (btn) {
                btn.onclick = handler;
                btn.addEventListener('touchend', e => {
                    e.preventDefault();
                    handler();
                });
            }
        });

        // Hide tooltip when clicking elsewhere
        document.addEventListener('click', (e) => {
            if (!e.target.classList.contains('highlighted-word')) {
                hideTooltip();
            }
        });

        // Stop speech when page is hidden
        document.addEventListener('visibilitychange', () => {
            if (document.hidden) {
                stopCurrentSpeech();
            }
        });

        window.addEventListener('beforeunload', () => {
            stopCurrentSpeech();
        });
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
            setupEventListeners();
            initApp();
        });
    } else {
        setupEventListeners();
        initApp();
    }

    // Debug info
    console.log(`
? JAPANESE FLASHCARDS WITH AUTH
===============================
? Authentication: Demo Mode (localStorage)
? Original Flashcard Features: Full Integration
? Progress Tracking: User-based
? Cost: $0 (Firebase FREE tier ready)

? Features:
- Google/Facebook/Email Login
- 30+ Lessons with Reading Practice
- User Progress Tracking
- Speech Synthesis
- Mobile Responsive

? Production Ready:
1. Change DEMO_MODE to false
2. Add real Firebase config
3. Deploy to Firebase Hosting
    `);
</script>
</body>
</html>